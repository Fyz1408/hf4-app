<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="hf4_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:hf4_app.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Hjem">
            <ShellContent
                Title="Hjem"
                ContentTemplate="{DataTemplate views:FrontPage}"
                Route="FrontPage"
                Icon="logo.png" />
        </Tab>
        <Tab Title="QR Scanner">
            <ShellContent
                Title="QR-scanner"
                ContentTemplate="{DataTemplate views:QrScannerView}"
                Route="qrScannerView"
                Icon="logo.png" />
        </Tab>
    </TabBar>
</Shell>